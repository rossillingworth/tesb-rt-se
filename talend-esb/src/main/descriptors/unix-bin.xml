        <!-- patch xmlsec bundle (TESB-11262) -->
        <file>
            <source>${basedir}/target/dependencies/xmlsec-1.5.5-TESB.jar</source>
            <outputDirectory>/container/system/org/apache/santuario/xmlsec/1.5.5/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
