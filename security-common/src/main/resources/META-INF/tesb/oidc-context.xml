<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="order" value="3" />
        <property name="ignoreUnresolvablePlaceholders" value="true" />
        <property name="ignoreResourceNotFound" value="true" />
        <property name="location" value="classpath:oidc.properties" />
        <property name="properties">
            <props>
                <prop key="org.talend.esb.job.oidc.public.client.id">aFSloIZSXHRQtA</prop>
                <prop key="org.talend.esb.job.oidc.token.endpoint"></prop>
                <prop key="org.talend.esb.job.oidc.validation.endpoint"></prop>
                <prop key="org.talend.esb.job.oidc.scope">oidc</prop>
            </props>
        </property>
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="order" value="2" />
        <property name="ignoreUnresolvablePlaceholders" value="true" />
        <property name="ignoreResourceNotFound" value="true" />
        <property name="location" value="classpath:config/org.talend.esb.job.oidc.cfg"/>
    </bean>

    <bean id="oidcConfiguration"
          class="org.talend.esb.security.oidc.OidcConfiguration">
          
        <property name="publicClientId" value="${oidc.public.client.id}"/>
        <property name="tokenEndpoint" value="${oidc.token.endpoint}"/>
        <property name="validationEndpoint" value="${oidc.validation.endpoint}"/>
        <property name="scope" value="${oidc.scope}"/>
    </bean>
    
</beans>
