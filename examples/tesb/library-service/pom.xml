        <!-- Log dependencies -->
        <log4j.version>1.2.17</log4j.version>
        <slf4j.version>1.7.5</slf4j.version>
    </properties>

    <modules>
        <module>common</module>
        <module>client</module>
        <module>service</module>
        <module>war</module>
        <module>features</module>
