                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*.bat</exclude>
            </excludes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>target/dependencies/cxf/apache-cxf-${cxf.version}/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
