<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />

    <jaxrs:client id="restClient"
         address="http://localhost:${http.port}/services/personservice"
         serviceClass="common.advanced.PersonService">
         <jaxrs:headers>
             <entry key="Accept" value="application/xml"/>
         </jaxrs:headers>
         <jaxrs:providers>
             <bean class="org.apache.cxf.jaxrs.client.ResponseReader">
                <property name="entityClass" value="common.advanced.PersonCollection"/>
             </bean>
         </jaxrs:providers>
    </jaxrs:client>
    
    <bean class="client.PersonServiceProxyClient">
       <property name="personService" ref="restClient"/>
    </bean>

</beans>
